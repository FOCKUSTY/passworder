{
  "name": "passworder",
  "version": "2.1.0-beta",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run pkg",
    
    "create-folder": "mkdir -p dist\\passworder && mkdir -p dist\\passworder\\latest",
    
    "pkg": "npm run pkg:main && npm run pkg:au && npm run pkg:index && npm run pkg:security",
    "pkg:index": "pkg -t node*-win-x64 dist/index.js -o dist/passworder/index.exe",
    "pkg:main": "pkg -t node*-win-x64 dist/main/index.js -o dist/passworder/latest/index.exe",
    "pkg:au": "pkg -t node*-win-x64 dist/updater/index.js -o dist/passworder/updater.exe",
    "pkg:security": "pkg -t node*-win-x64 dist/env/index.js -o dist/passworder/security.exe",
    
    "execute": "cd dist/passworder/latest && index.exe",
    "execute:index": "cd dist/passworder && index.exe",
    "execute:updater": "cd dist/passworder && updater.exe",
    "execute:js": "node dist/main/index.js",

    "start": "npm run build && npm run execute",
    "start:index": "npm run build && npm run execute:index",
    "start:updater": "npm run build && npm run execute:updater",
    "start:js": "npm run build && npm run execute:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FOCKUSTY/passworder.git"
  },
  "author": {
    "name": "FOCKUSTY",
    "email": "viserd.yt@gmail.com",
    "url": "https://fockusty.netlify.app"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FOCKUSTY/passworder/issues"
  },
  "homepage": "https://github.com/FOCKUSTY/passworder#readme",
  "description": "",
  "engines": {
    "node": ">=18.13.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/tar-stream": "^3.1.4",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "pkg": "^5.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "dependencies": {
    "random-js": "^2.1.0",
    "tar-stream": "^3.1.7"
  }
}
